<Window x:Class="RazorFiddle.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Razor Fiddler" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Button Command="{Binding CompileScriptAction}" DockPanel.Dock="Bottom">Run!</Button>
        <DockPanel LastChildFill="True">
            <TextBox AcceptsTab="True" AcceptsReturn="True" Text="{Binding RazorScript}" DockPanel.Dock="Top" Height="200"></TextBox>
            <TextBox AcceptsTab="True" AcceptsReturn="True" Text="{Binding ParsedScript}" DockPanel.Dock="Bottom"></TextBox>
        </DockPanel>        
    </DockPanel>
</Window>
